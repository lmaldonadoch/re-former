<%= form_for @user do |f| %>
  <%= f.label :username, 'Your Uername here' %> <br>
  <%= f.text_field :username %> <br> <br>
  <%= f.label :email %> <br> 
  <%= f.email_field :email%> <br><br>
  <%= f.label :password %> <br>
  <%= f.password_field :password, placeholder: '1 Upper case at least'  %> <br>
  <br>
  <br>
  <%= f.submit %>
<%end%>